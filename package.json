{
  "name": "knowledge-base",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "homepage": ".",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start:electron": "electron .",
    "dev": "concurrently \"cross-env BROWSER=none npm run start\" \"wait-on http://localhost:3333/ && cross-env NODE_ENV=development electron .\"",
    "prebuild": "echo 正在准备构建...",
    "electron:build": "npm run build && electron-builder --win"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "resolve": {
    "extensions": [
      ".js",
      ".jsx",
      ".json",
      ".ts",
      ".tsx"
    ]
  },
  "dependencies": {
    "@ant-design/x": "^1.0.6",
    "@blocknote/core": "^0.25.2",
    "@blocknote/mantine": "^0.25.2",
    "@blocknote/react": "^0.25.2",
    "@chakra-ui/next-js": "^2.4.2",
    "@chakra-ui/react": "^2.10.7",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@reduxjs/toolkit": "^2.6.1",
    "@saas-ui/react": "^2.11.4",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^13.5.0",
    "antd": "^5.24.3",
    "antd-style": "^3.7.1",
    "concurrently": "^9.1.2",
    "framer-motion": "^12.5.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.3.0",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "cross-env": "^7.0.3",
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8",
    "less": "^4.2.2",
    "less-loader": "^12.2.0",
    "nodemon": "^3.1.9",
    "typescript": "^5.8.2",
    "vite": "^6.2.2",
    "wait-on": "^8.0.2"
  },
  "author": "Willzclin",
  "description": "A knowledge base application",
  "build": {
    "appId": "com.knowledge-base",
    "productName": "知识库",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js",
      "package.json"
    ],
    "extraMetadata": {
      "main": "build/main.js"
    },
    "asar": true,
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
