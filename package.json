{
  "name": "knowledge-base",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "homepage": ".",
  "scripts": {
    "start": "react-scripts start",
    "start:electron": "electron .",
    "dev": "concurrently \"cross-env BROWSER=none npm run start\" \"wait-on http://localhost:3000/ && cross-env NODE_ENV=development nodemon --watch main.js --exec electron .\"",
    "prebuild": "echo 正在准备构建...",
    "build": "react-scripts build && copy main.js build\\main.js",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:build": "npm run build && electron-builder --win"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "resolve": {
    "extensions": [
      ".js",
      ".jsx",
      ".json",
      ".ts",
      ".tsx"
    ]
  },
  "dependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^13.5.0",
    "concurrently": "^9.1.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8",
    "nodemon": "^3.1.9",
    "wait-on": "^8.0.2"
  },
  "author": "Willzclin",
  "description": "A knowledge base application",
  "build": {
    "appId": "com.knowledge-base",
    "productName": "知识库",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js",
      "package.json"
    ],
    "extraMetadata": {
      "main": "build/main.js"
    },
    "asar": true,
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
